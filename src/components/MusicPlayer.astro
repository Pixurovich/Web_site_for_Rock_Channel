// Player state
let currentPlaylist = [];
let currentTrackIndex = 0;
let isPlaying = false;
let favorites = JSON.parse(localStorage.getItem('rockReplayFavorites') || '[]');
let currentGenre = '';

// DOM elements
const topMusicPlayer = document.getElementById('top-music-player');
const expandedPlayer = document.getElementById('expanded-player');
const topExpand = document.getElementById('top-expand');
const collapsePlayer = document.getElementById('collapse-player');
const genreModal = document.getElementById('genre-modal');
const closeGenreModal = document.getElementById('close-genre-modal');
