// Top player elements
const topTrackTitle = document.getElementById('top-track-title');
const topTrackArtist = document.getElementById('top-track-artist');
const topTrackCover = document.getElementById('top-track-cover');
const topPlayPauseBtn = document.getElementById('top-play-pause-btn');
const topPlayIcon = document.getElementById('top-play-icon');
const topPauseIcon = document.getElementById('top-pause-icon');
