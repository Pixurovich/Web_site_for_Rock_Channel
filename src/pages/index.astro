---
import Layout from '../layouts/Layout.astro';
import ScrollingPosts from '../components/ScrollingPosts.astro';

// Get latest videos
const latestVideos = [
  
  {
    title: "WARKINGS - Hangman's Night (ft. DOMINUM)",
    description: 'Power Metal Warriors Warkings анонсируют апокалиптический пятый альбом Armageddon!...',
    date: "03.07.2025",
    telegramPostId: "1179",
    imageUrl: "https://i.postimg.cc/Bby40PZz/warkings-2025-1.jpg"
  },
  {
    title: "Within Destruction - ANIMETAL",
    description: 'Within Destruction официально объявили о своей следующей главе, представив свой грядущий альбом ANIMETAL, релиз которого запланирован...',
    date: "03.07.2025",
    telegramPostId: "1180",
    imageUrl: "https://i.postimg.cc/8P9XhBn3/ANIMETAL-Within-Destruction-800x445.jpg"
  },
  {
    title: "Lord Of The Lost - Ghosts (ft. Tina Guo)",
    description: 'Немецкая готик-метал группа Lord Of The Lost выпустила клип на песню Ghosts из альбома Opvs Noir Vol. 1, который выйдет...',
    date: "05.07.2025",
    telegramPostId: "1183",
    imageUrl: "https://i.postimg.cc/1XNwP6cn/tina-guo-696x464.jpg"
  }
];

// Get latest news
const latestNews = [
  {
    title: 'JUDAS PRIEST поделились кавером на песню BLACK SABBATH',
    description: "Для нас честь выразить нашу любовь к Озге и Black Sabbath нашим почетом к War Pigs: песня, которую мы играем на каждом концерте по всему миру...",
    date: "05.07.2025",
    telegramPostId: "",
    category: "Новость",
    imageUrl: "https://i.postimg.cc/s2ct9GWh/n174291.jpg"
  },
];

// Get upcoming concerts
const upcomingConcerts = [

  
];

// Combine all posts for the scrolling section
const allPosts = [
  ...latestVideos.map(video => ({
    ...video,
    category: 'Клип'
  })),
  ...latestNews,
  ...upcomingConcerts.map(concert => ({
    title: concert.band,
    description: `${concert.venue}, ${concert.city}`,
    imageUrl: concert.imageUrl,
    telegramPostId: concert.telegramPostId,
    category: 'Концерт',
    date: concert.date
  }))
];
---

<Layout title="RockReplay - лучшее из мира рок-музыки">
  <section class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h1 class="text-4xl md:text-6xl font-bold mb-4">
        <span class="text-secondary">Rock</span>Replay
      </h1>
      <p class="text-xl text-gray-400">Лучшее из мира рок-музыки</p>
    </div>
<link rel="icon" href="https://example.com/favicon.ico" type="image/x-icon">
    <!-- Scrolling Posts -->
    <div class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-center">Недавние обновления</h2>
      <ScrollingPosts posts={allPosts} />
    </div>
  </section>
</Layout>
