    </div>
<link rel="icon" href="https://example.com/favicon.ico" type="image/x-icon">
    <!-- Scrolling Posts -->
    <div class="mb-16">
      <h2 class="text-2xl font-bold mb-6 text-center">Недавние обновления</h2>
      <ScrollingPosts posts={allPosts} />
    </div>
  </section>
</Layout>
